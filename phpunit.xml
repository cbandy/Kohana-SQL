<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" bootstrap="../../application/test_bootstrap.php">
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="false">
			<directory suffix=".php">./classes/</directory>
		</whitelist>
	</filter>
	<testsuites>
		<testsuite name="Database Default Implementations">
			<file>tests/database/base/testsuite.php</file>
		</testsuite>
		<testsuite name="Database MySQL Implementation">
			<file>tests/database/mysql/testsuite.php</file>
		</testsuite>
		<testsuite name="Database PostgreSQL Implementation">
			<file>tests/database/postgresql/testsuite.php</file>
		</testsuite>
		<testsuite name="Database SQLite Implementation">
			<file>tests/database/pdo/sqlite/testsuite.php</file>
		</testsuite>
		<testsuite name="Database Driver Tests">
			<file>tests/database/driver/testsuite.php</file>
		</testsuite>
		<testsuite name="Remaining Tests">
			<directory suffix=".php">./tests/</directory>
		</testsuite>
	</testsuites>
</phpunit>
